            android:name=".work.pearlsantos.cravebot.Splash"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".work.pearlsantos.cravebot.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".results.elysi.cardlayoutview.CardLayout"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Transparent" />
        <activity android:name=".results.elysi.cardlayoutview.TestResult" />
        <activity
            android:name=".results.elysi.gridview.GridViewLayout"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Transparent" >
        </activity>
        <activity
            android:name=".work.pearlsantos.cravebot.InstructionSlides"
            android:label="@string/title_activity_intstruction_slides"
            android:theme="@style/AppTheme" >
        </activity>

