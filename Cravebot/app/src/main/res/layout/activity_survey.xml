<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cravebot.survey.Survey">

    <ImageView
        android:layout_width="48dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:src="@drawable/page_2_marker"
        android:id="@+id/imageView2" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="NAME OF STALL"
            android:id="@+id/stallName"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/star_shaded"
            android:id="@+id/imageView" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="WHAT IS YOUR MOST PREFERRED DISH?"
                android:id="@+id/question1"
                android:layout_marginTop="33dp"/>


            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Answer 1"
                android:id="@+id/radioButton"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Answer 2"
                android:id="@+id/radioButton2"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Answer 3"
                android:id="@+id/radioButton3"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Answer 4"
                android:id="@+id/radioButton4"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="WHICH DISHES WOULD YOU WANT TO SEE SOON?"
                android:id="@+id/question2"
                android:layout_marginTop="33dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Answer 1"
                android:id="@+id/radioButton5"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Answer 2"
                android:id="@+id/radioButton6"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Answer 3"
                android:id="@+id/radioButton7"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Answer 4"
                android:id="@+id/radioButton8"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="PLEASE RATE THE QUALITY OF FOOD"
                android:id="@+id/question3"
                android:layout_marginTop="33dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText"
                android:background="@drawable/survey_edittext"
                android:hint="ENTER FOOD ITEM PURCHASED"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="COMMENTS AND SUGGESTIONS"
                android:id="@+id/question4"
                android:layout_marginTop="33dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText2"
                android:lines="3"
                android:background="@drawable/survey_edittext"
                android:hint="TYPE COMMENTS AND SUGGESTIONS HERE"/>

            <ImageButton
                android:layout_width="95dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/submit_button"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"
                android:id="@+id/surveyButtonSubmit" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
