<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".CardLayout">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/food_bg"
        android:orientation="vertical">

        <cravebot.results.elysi.cardlayoutview.PagerContainer
            android:id="@+id/pager_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4">

            <com.antonyt.infiniteviewpager.InfiniteViewPager
                android:id="@+id/viewPager"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_gravity="center" />

        </cravebot.results.elysi.cardlayoutview.PagerContainer>


        <!--<android.support.design.widget.FloatingActionButton-->
        <!--android:id="@+id/gridview"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="bottom|center"-->
        <!--android:layout_margin="@dimen/fab_margin"-->
        <!--android:src="@drawable/grid_view_button"-->
        <!--android:background="@color/transparent"/>-->

        <!--<android.support.design.widget.TabLayout android:id="@+id/switchView"-->
        <!--android:layout_width="match_parent" android:layout_height="0dp"-->
        <!--android:layout_weight="0.4"-->
        <!--android:background="@drawable/food_bg"-->
        <!--android:layout_gravity="bottom"/>-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="0.4"
            android:layout_gravity="bottom|center"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:background="#00555555">

            <ImageButton
                android:id="@+id/card_view_button"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:background="@drawable/card"
                android:backgroundTintMode="src_over"
                android:backgroundTint="@color/deep_orange_A700"
                android:padding="@dimen/_7sdp"
                android:layout_margin= "@dimen/_7sdp"
                android:scaleType="center" />

            <ImageButton
                android:id="@+id/grid_view_button"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:padding="@dimen/_7sdp"
                android:layout_margin= "@dimen/_7sdp"
                android:background="@drawable/grid_view_button"
                android:scaleType="center" />


        </LinearLayout>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        fab:fab_colorNormal="@android:color/holo_red_dark"
        fab:fab_colorPressed="@android:color/holo_red_light"
        fab:fab_colorRipple="@android:color/holo_red_light" />


</android.support.design.widget.CoordinatorLayout>

